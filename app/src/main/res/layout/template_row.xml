<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <RelativeLayout
        android:id="@+id/templateRowLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <TextView
            android:id="@+id/templateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:height="20dp"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/templateCategoryText"
            android:layout_width="wrap_content"
            android:layout_marginLeft="18sp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_below="@+id/templateTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/templateTitle"
            android:layout_alignEnd="@+id/templateTitle" />

        <TextView
            android:id="@+id/templateCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/templateWallet"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/templateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18sp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_below="@+id/templateCategoryText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/templateWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:layout_marginLeft="18sp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/templateName"
             />

    </RelativeLayout>


</FrameLayout>